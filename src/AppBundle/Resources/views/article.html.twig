{% extends 'base.html.twig' %}

{% block body %}#}
    <div class="container">
        <div class="col-md-10 offset-1">
            <div class="row">
                <h1>{{ article.title}}</h1>
                <div class="col-md-12">{{ article.content }}</div>
            {% if comments is not null %}
                <div class="col-md-2 offset-10">{{ comments|length }} Commentaires.</br><button onclick="toogleShowHide('comments')">Afficher</button></div>
                <div class="col-md-12" id="comments">
                    {% for comment in comments%}
                        <div class="row">
                            <div class="col-md-10 offset-2">{{ comment.content }}</div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
